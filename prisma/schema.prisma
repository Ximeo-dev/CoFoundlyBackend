generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid()) @db.Uuid
  email            String            @unique
  username         String            @unique
  displayUsername  String            @unique
  role             UserRole          @default(USER)
  securitySettings SecuritySettings?
  profile           UserProfile?
  projectsRequests ProjectRequest[] @relation("UserRequests")
  projectsMember ProjectMember[] @relation("ProjectMemberToUser")
  projectsOwned Project[] @relation("ProjectOwner")

  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  Subscription     Subscription[]
  // Chat             Chat[]            @relation("ChatParticipants")
  interests        Interest[]        @relation("InterestToUser")
  BlogPost         BlogPost[]
  // Message          Message[]
  OAuthAccount     OAuthAccount[]

  @@index([email, username])
}

enum UserRole {
  ADMIN
  CONTENT
  USER
}

model UserProfile {
  id  Int     @id @default(autoincrement())
  userId  String  @unique @db.Uuid
  user  User    @relation(fields: [userId], references: [id])
  name String
  birthDate DateTime @db.Date
  country String?
  city String?
  timezone String?
  bio String
  portfolio String[]
  jobId Int?
  job Job? @relation(fields: [jobId], references: [id])
  skills Skill[]
  languages Language[]
  industries Industry[]
  likes Int @default(0)
  hasAvatar Boolean @default(false)

  performedSwipes Swipe[] @relation("SwipesFrom")
  receivedSwipes Swipe[] @relation("SwipesTo")
  MatchesAsA Match[] @relation("MatchesA")
  MatchesAsB Match[] @relation("MatchesB")

  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  @@index([userId])
}

model Project {
  id          String        @id @default(uuid()) @db.Uuid
  name        String
  description String
  hasAvatar   Boolean       @default(false)
  ownerId     String        @db.Uuid
  owner       User @relation("ProjectOwner", fields: [ownerId], references: [id])
  roles ProjectRole[]       @relation("ProjectRoles")
  members ProjectMember[]   @relation("ProjectMembers")
  projectRequirement ProjectRequirement? @relation("ProjectRequirements")
  projectRequests ProjectRequest[] @relation("ProjectRequests")

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([ownerId])
}

model ProjectMember {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  user      User     @relation("ProjectMemberToUser", fields: [userId], references: [id])
  projectId String   @db.Uuid
  project   Project  @relation("ProjectMembers", fields: [projectId], references: [id])
  roleId String @db.Uuid
  role ProjectRole @relation("ProjectMemberRole", fields: [roleId], references: [id])
  joinedAt  DateTime @default(now())
  
  @@unique([userId, projectId])
  @@index([projectId, userId])
}

model ProjectRole {
  id String @id @default(uuid()) @db.Uuid
  name String @db.VarChar(255)
  projectId String @db.Uuid
  project Project @relation("ProjectRoles", fields: [projectId], references: [id])
  projectMembers ProjectMember[] @relation("ProjectMemberRole")

  @@index([projectId])
}

model ProjectRequirement {
  id         String   @id @default(uuid()) @db.Uuid
  projectId  String @db.Uuid @unique
  project    Project  @relation("ProjectRequirements", fields: [projectId], references: [id])
  industryId Int
  industry Industry @relation("ProjectsRequirementIndustry", fields: [industryId], references: [id])
  languages Language[]
  skills Skill[]
  jobs Job[]

  @@index([projectId])
}

model ProjectRequest {
  id         BigInt   @id @default(autoincrement())
  userId     String   @db.Uuid
  user       User     @relation("UserRequests", fields: [userId], references: [id])
  projectId  String   @db.Uuid
  project    Project  @relation("ProjectRequests", fields: [projectId], references: [id])
  message    String?
  status     ProjectRequestStatus @default(PENDING)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, projectId])
  @@index([projectId, userId])
}

enum ProjectRequestStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model Job {
  id    Int @id @default(autoincrement())
  name String @unique @db.VarChar(255)
  profiles UserProfile[]
  projectsRequirement ProjectRequirement[]

  @@index([name])
}

model Skill {
  id    Int @id @default(autoincrement())
  name  String @unique @db.VarChar(255)
  profiles UserProfile[]
  projectsRequirement ProjectRequirement[]

  @@index([name])
}

model Language {
  id Int @id @default(autoincrement())
  name String @unique @db.VarChar(255)
  profiles UserProfile[]
  projectsRequirement ProjectRequirement[]

  @@index([name])
}

model Industry {
  id Int @id @default(autoincrement())
  name String @unique @db.VarChar(255)
  profiles UserProfile[]
  projectsRequirement ProjectRequirement[] @relation("ProjectsRequirementIndustry")

  @@index([name])
}

model Interest {
  id   Int          @id @default(autoincrement())
  type InterestType
  User User[]       @relation("InterestToUser")
}

model SecuritySettings {
  id               Int     @id @default(autoincrement())
  userId           String  @unique @db.Uuid
  passwordHash     String
  twoFactorEnabled Boolean @default(false)
  telegramId String?
  twoFactorToken String?
  isEmailConfirmed Boolean @default(false)
  emailConfirmationToken String?
  changeEmailToken String?
  resetPasswordToken String?
  jwtTokenVersion Int @default(0)
  user             User    @relation(fields: [userId], references: [id])
}

model Swipe {
  id         BigInt      @id @default(autoincrement())
  fromProfileId Int
  toProfileId   Int
  isLiked      Boolean
  createdAt  DateTime @default(now())

  fromProfile   UserProfile     @relation("SwipesFrom", fields: [fromProfileId], references: [id])
  toProfile     UserProfile     @relation("SwipesTo", fields: [toProfileId], references: [id])

  @@unique([fromProfileId, toProfileId])
  @@index([toProfileId])
}

model Match {
  id         Int      @id @default(autoincrement())
  profileAId    Int
  profileBId    Int
  createdAt  DateTime @default(now())

  profileA      UserProfile     @relation("MatchesA", fields: [profileAId], references: [id])
  profileB      UserProfile     @relation("MatchesB", fields: [profileBId], references: [id])

  @@unique([profileAId, profileBId])
}

enum MatchStatus {
  ACCEPTED
  REJECTED
  PENDING
}

